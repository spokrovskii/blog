<div class="container">
  <h1>New Post</h1>
  <%= form_for :post, url: posts_path do |f|  %>
    <p>
      <%= f.label :Название%><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :Статья %><br>
      <%= f.text_field :content %>
    </p>

    <p>
      <%= f.label :Опубликовать %><br>
      <%= f.submit %>
     </p>

  <% end %>
</div>
